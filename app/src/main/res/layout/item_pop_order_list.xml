<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
        <TextView
            android:id="@+id/item_pop_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="訂單編號：00001"
            android:textColor="#000"
            android:textSize="15sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/item_pop_car_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_pop_order_no"
            android:text="車牌號碼：M6956"
            android:textColor="#000"
            android:textSize="15sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/item_pop_car_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_pop_car_no"
            android:text="車位編號：09"
            android:textColor="#000"
            android:textSize="15sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/item_pop_order_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_pop_car_port"
            android:text="备注"
            android:textColor="#000"
            android:textSize="15sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/item_pop_order_next_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_pop_order_no"
            android:layout_marginRight="10dp"
            android:text="下次時間"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_pop_order_next_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_pop_order_next_time_text"
            android:layout_marginRight="10dp"
            android:text="00:00:12"
            android:textColor="#000"
            android:textSize="20sp" />
</RelativeLayout>