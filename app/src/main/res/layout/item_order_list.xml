<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDrakGray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0.5dp"
        android:background="@color/colorWight"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_orderlist_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@color/colorWight"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@mipmap/img_loading_list" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWight"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_orderlist_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="訂單編號：123456789"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_orderlist_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="訂單金額：MOP70"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_orderlist_operation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="操作時間：10:30:50 2018/05/01"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_orderlist_mibiao_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="咪錶編號：68910"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_orderlist_car_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="車牌號碼：M69-54"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_orderlist_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="地址：未知"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>